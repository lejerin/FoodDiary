<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="lej.happy.fooddiary.ui.post.PostViewModel" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AddPostActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:onClick="@{(v) -> viewModel.activityFinish(v)}"
            android:id="@+id/add_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <LinearLayout
            android:onClick="@{(v) -> viewModel.showSelectDateDialog(v)}"
            android:id="@+id/select_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/add_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@{viewModel.dateStr}"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_event_24" />
        </LinearLayout>

        <Button
            android:id="@+id/save_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="저장"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <lej.happy.fooddiary.ui.custom.CustomPhotoViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="시간대"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="@+id/rv_review_rank2"
                    app:layout_constraintTop_toBottomOf="@+id/add_address_text" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">


                    <RadioGroup
                        tools:OnCheckedChangeListener="@{viewModel.radioListner}"
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/radio_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="#아침"
                            android:checked="@{viewModel.post.time == 1 ? true : false}"
                            android:textColor="@drawable/radio_text"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/radio_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="#점심"
                            android:checked="@{viewModel.post.time == 2 ? true : false}"
                            android:textColor="@drawable/radio_text"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/radio_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="#저녁"
                            android:checked="@{viewModel.post.time == 3 ? true : false}"
                            android:textColor="@drawable/radio_text"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/radio_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="#야식"
                            android:checked="@{viewModel.post.time == 4 ? true : false}"
                            android:textColor="@drawable/radio_text"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radioButton5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/radio_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="#간식"
                            android:checked="@{viewModel.post.time == 5 ? true : false}"
                            android:textColor="@drawable/radio_text"
                            android:textStyle="bold" />
                    </RadioGroup>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="평가*"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

                <lej.happy.fooddiary.ui.custom.CustomImageButton
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:id="@+id/best_emotion_layout"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="@{(v) -> viewModel.selectedBtn(v)}"
                    app:layout_background="@drawable/emotion_selector"
                    app:img="@drawable/laughing"
                    app:text="최고"/>

                <lej.happy.fooddiary.ui.custom.CustomImageButton
                    app:layout_constraintStart_toEndOf="@+id/best_emotion_layout"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:id="@+id/good_emotion_layout"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{(v) -> viewModel.selectedBtn(v)}"
                    app:layout_background="@drawable/emotion_selector"
                    app:img="@drawable/happy"
                    app:text="만족"/>


                <lej.happy.fooddiary.ui.custom.CustomImageButton
                    app:layout_constraintStart_toEndOf="@+id/good_emotion_layout"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:id="@+id/bad_emotion_layout"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{(v) -> viewModel.selectedBtn(v)}"
                    app:layout_background="@drawable/emotion_selector"
                    app:img="@drawable/nervous"
                    app:text="별로"/>


                <TextView
                    android:id="@+id/main_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="내용"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="@+id/viewpager"
                    app:layout_constraintTop_toBottomOf="@+id/warning_photo_text" />

                <EditText
                    android:text="@={viewModel.post.texts}"
                    android:textColor="@color/textColor"
                    android:id="@+id/add_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="내용을 입력해주세요"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    app:layout_constraintEnd_toEndOf="@+id/viewpager"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/main_add_text"
                    app:layout_constraintTop_toBottomOf="@+id/main_add_text" />

                <TextView
                    android:id="@+id/rv_review_rank2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="위치*"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="@+id/main_add_text"
                    app:layout_constraintTop_toBottomOf="@+id/add_text" />

                <EditText
                    android:id="@+id/location_title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:textColor="@color/textColor"
                    android:text="@={viewModel.post.location}"
                    android:hint="위치 직접 입력하기"
                    android:inputType="textPersonName|text"
                    app:layout_constraintEnd_toStartOf="@+id/map_search_btn"
                    app:layout_constraintStart_toStartOf="@+id/rv_review_rank2"
                    app:layout_constraintTop_toBottomOf="@+id/rv_review_rank2" />

                <Button
                    android:onClick="@{(v) -> viewModel.goMapSearchActivity(v)}"
                    android:id="@+id/map_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rect_primary"
                    android:text="위치찾기"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/add_address_text"
                    app:layout_constraintEnd_toEndOf="@+id/add_text"
                    app:layout_constraintTop_toTopOf="@+id/rv_review_rank2" />

                <TextView
                    android:id="@+id/warning_photo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 한 장은 필수입니다."
                    android:textColor="@color/warning"
                    android:textSize="12dp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/viewpager"
                    app:layout_constraintTop_toBottomOf="@+id/viewpager" />

                <TextView
                    android:id="@+id/warning_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="필수 항목을 입력해주세요."
                    android:textColor="@color/warning"
                    android:textSize="12dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/rv_review_rank2"
                    app:layout_constraintStart_toEndOf="@+id/rv_review_rank2"
                    app:layout_constraintTop_toTopOf="@+id/rv_review_rank2" />

                <TextView
                    android:id="@+id/warning_taste_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="필수 항목을 입력해주세요."
                    android:textColor="@color/warning"
                    android:textSize="12dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <TextView
                    android:id="@+id/add_address_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.post.address == null ? View.GONE : View.VISIBLE}"
                    android:text="@={viewModel.post.address}"
                    android:textSize="14dp"
                    android:textColor="@color/blue"
                    app:layout_constraintEnd_toEndOf="@+id/location_title_text"
                    app:layout_constraintStart_toStartOf="@+id/location_title_text"
                    app:layout_constraintTop_toBottomOf="@+id/location_title_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>